
@{
    ViewBag.Title = "Hulpvraag Toevoegen";
    Layout = "~/Views/Shared/_Simple.cshtml";
}
<a href="@Url.Action("Index", "Hulpbehoevende")" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Sluiten</a>
<h2>Hulpvragen Indienen</h2>
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Dien uw hulpvraag in</h3>
    </div>
    <div class="panel-body">
        <form method="post" action="">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="Urgent"> Urgent
                </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label>
                    <input type="checkbox" name="Auto"> Auto Benodigd
                </label>
            </div>
            <div>
            <div class="FormLinks">
                <label>Plaatsnaam:</label><br />
                <input type="text" required class="form-control" id="Plaatsnaam" placeholder="Eindhoven" name="Plaatsnaam">
                <label>Straatnaam & Huisnummer:</label><br />
                <input type="text" required  class="form-control" id="StraatEnHuisnummer" placeholder="Willemstraat 34" name="StraatEnHuisnummer">                 
            </div>
            <div class="FormRechts">
                <label>Start Datum :</label><br />
                <input type="date" required  name="Datum" /><br/>
                <label>Start Tijd :</label><br />
                <input type="time" required  name="Tijd" /><br/>
                <label>Duur :</label><br />
                <input type="time" required  name="Duur" />
            </div>

            </div>
            <br />
            <hr id="hr" />
            <div class="HulpvraagContent">
                <label>Titel van de Hulpvraag:</label>
                <input type="text" required  class="form-control" id="KOmschrijving" placeholder="Titel" name="KOmschrijving">
                <label>Omschrijving:</label><br />
                <textarea class="form-control" required  id="Omschrijving" name="Omschrijving"></textarea>
            </div>
            <br />
            <div class="HulpvraagMenu">
                <input type="submit" value="Indienen" class="btn btn-sq-lg btn-warning" onclick="Succes()"/>
            </div>
        </form>        
    </div>
</div>

