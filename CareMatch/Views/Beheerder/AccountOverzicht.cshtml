@using CareMatch.Models
@{
    ViewBag.Title = "AccountOverzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Index", "Beheerder")" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home</a>
<br />
<div class="overzichtTitle">
    <div>
        <h2>Account Overzicht</h2>
    </div>
    <div class="dropdown">
        <form action="" method="get">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Filter op: @Request.QueryString["filter"]
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href='@Url.Action("HulpvragenOverzicht", new { id = 0})'>Alle Gebruikers</a></li>
                <li><a href='@Url.Action("HulpvragenOverzicht", new { id = 1})'>Vrijwilligers</a></li>
                <li><a href='@Url.Action("HulpvragenOverzicht", new { id = 2})'>Hulpbehoevende</a></li>
                <li><a href='@Url.Action("HulpvragenOverzicht", new { id = 3})'>Niet goed gekeurde vrijwilligers</a></li>
                <li><a href='@Url.Action("HulpvragenOverzicht", new { id = 4})'>Vrijwilligers zonder VOG</a></li>
            </ul>
        </form>
    </div>
</div>
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Mijn Hulpvragen</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th>Gebruikersnaam</th>
                <th>Voornaam</th>
                <th>Achternaam</th>
                <th>Rol</th>
                <th>VOG</th>
                <th>Approved</th>
            </tr>
            @foreach (CareMatch.Models.Gebruiker gebruiker in ViewBag.GebruikerList)
            {
                <tr>
                    <td>@gebruiker.Gebruikersnaam</td>
                    <td>@gebruiker.Voornaam</td>
                    <td>@gebruiker.Achternaam</td>
                    <td>@gebruiker.Rol</td>
                    <td>@gebruiker.VOG</td>
                    @if (gebruiker.Approved)
                    {
                        <td><h4>✔</h4></td>
                    }
                    else
                    {
                        <td>&nbsp;</td>
                    }
                </tr>
            }
        </table>
    </div>
</div>
