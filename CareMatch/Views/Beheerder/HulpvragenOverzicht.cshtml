
@{
    ViewBag.Title = "Hulpvragen Overzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CareMatch.Models.Hulpvraag> hulpvragen = ViewData["Hulpvragen"] as List<CareMatch.Models.Hulpvraag>;
}
<a href="@Url.Action("Index", "Beheerder")" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home</a>
<br />
<div class="overzichtTitle">
    <div>
        <h2>Hulpvragen Overzicht</h2>
    </div>
</div>
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">Gerapporteerde Hulpvragen</h3>
    </div>
    <div class="panel-body">
        @{ if (hulpvragen.Count == 0)
            {
                <h3>Er zijn geen gerapporteerde hulvragen.</h3>
            }
            else {
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Titel</th>
                        <th>Urgent</th>
                        <th>Datum</th>
                        <th></th>
                    </tr>
                    @foreach (CareMatch.Models.Hulpvraag hulpvraag in hulpvragen)
                    {
                        <tr>
                            <td>@hulpvraag.Titel</td>
                            @if (@hulpvraag.Urgent)
                            {
                                <td><h4>✔</h4></td>
                            }
                            else
                            {
                                <td>&nbsp;</td>
                            }
                            <td>@hulpvraag.StartDatum.ToString()</td>
                            <td><a type="button" class="btn btn-info" href='@Url.Action("Hulpvraag", new { id = @hulpvraag.HulpvraagID})'>Bekijken</a></td>
                        </tr>
                    }
                </table>
            }
        }
    </div>
</div>
