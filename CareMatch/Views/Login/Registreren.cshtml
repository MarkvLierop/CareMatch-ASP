
@{
    ViewBag.Title = "Registreren";
    Layout = "~/Views/Shared/_LoginRegister.cshtml";
}
<h2>Registreren</h2>

<div class="main-login main-center">
    <form action="~/Login">
        <div class="btn-group" role="group">
            <br />
            Al een account? Log hier in!<br />
            <input type="submit" class="btn btn-default" value="Login" />
        </div>
    </form>
    <form method="post" name="Registreren" class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label class="col-lg-2 control-label">Rol</label>
                <div class="col-lg-10">
                    <div class="radio">
                        <label>
                            <input name="optionsRadios" id="optionsRadios1" value="vrijwilliger" checked="" type="radio">
                            Vrijwilliger
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input name="optionsRadios" id="optionsRadios2" value="hulpbehoevende" type="radio">
                            Hulpbehoevende
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="Gebruikersnaam" class="col-lg-2 control-label">Gebruikersnaam</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Gebruikersnaam" placeholder="Gebruikersnaam" name="Gebruikersnaam">
                </div>
            </div>
            <div class="form-group">
                <label for="Wachtwoord" class="col-lg-2 control-label">Wachtwoord</label>
                <div class="col-lg-10">
                    <input type="password" class="form-control" id="Wachtwoord" placeholder="Wachtwoord" name="Wachtwoord">
                </div>
            </div>
            <div class="form-group">
                <label for="Voornaam" class="col-lg-2 control-label">Voornaam</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Voornaam" placeholder="Voornaam" name="Voornaam">
                </div>
            </div>
            <div class="form-group">
                <label for="Tussenvoegsel" class="col-lg-2 control-label">Tussenvoegsel</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Tussenvoegsel" placeholder="Tussenvoegsel" name="Tussenvoegsel">
                </div>
            </div>
            <div class="form-group">
                <label for="Achternaam" class="col-lg-2 control-label">Achternaam</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Achternaam" placeholder="Achternaam" name="Achternaam">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Geslacht</label>
                <div class="col-lg-10">
                    <div class="radio">
                        <label>
                            <input name="Geslacht" id="optionsRadios1" value="Vrouw" checked="" type="radio">
                            Man
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input name="Geslacht" id="optionsRadios2" value="Vrouw" type="radio">
                            Vrouw
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Geboortedatum</label>
                <input type="date" class="form-control" id="Geboortedatum" placeholder="Geboortedatum" name="Geboortedatum">
            </div>
            <div class="form-group">
                <label for="Pasfoto" class="col-lg-2 control-label">Pasfoto</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="Pasfoto" placeholder="Pasfoto" name="Pasfoto">
                </div>
            </div>
            <div class="form-group">
                <label for="VOG" class="col-lg-2 control-label">VOG</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="VOG" placeholder="VOG" name="VOG">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Reset</button>
                    <button type="submit" class="btn btn-primary">Aanmelden</button>
                </div>
            </div>
            </fieldset>
        </form>
</div>